vendo-prefixes = o ms moz webkit official
azul = #22BCE0
naranja = #DD4F24
gris_oscuro = linear-gradient(#444, #444, black)
gris_texto = #7a7a7a

a
	color naranja
	text-decoration none

body
	background #E8E8E8
	color gris_oscuro
	font-family Arial
	font-size 16px

nav
	background azul
	border-left 15px solid white
	position relative

	&:before
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content ""
		position absolute
		top 0
		left 0
	
	&:after
		border-bottom
		border-right 20px solid red
		content ""

	.menu
		heigh 40px
		line-height 40px
		margin 0
		padding 0
		overflow-x auto
		white-space nowrap //no hay salto de linea
		
		li
			display inline-block
			
			a
				//border 1px solid red
				color white
				display inline-block
				margin 0 0.5em
				padding 0.2em
				text-decoration none		

footer
	background naranja
	bottom 0
	color rgba(white, 0.5)
	text-align center
	position absolute
	width 100%

	h3
		font-size 14px
		font-weight normal
		
		strong
			display block
			
		.mejor
			&:before
			&:after
				content "-"

header
	background gris_oscuro
	box-shadow 0 5px 0 rgba(0, 0, 0, .25)
	color white
	overflow hidden
	padding 5px
	position relative
	z-index 1
	
	.logo
		border-right 1px solid azul
		width 60px //este define la distancia de la rallita//
		img
			width 52px
	
	.titular
		margin 0 80px 0 70px // sup izq inf der
		
		.publicar
			background naranja
			color white
			padding 0.2em 0.5em //arriba, lados
			font-style italic
			margin -5px 1em 0 0
			float right
			text-decoration none
			text-shadow 2px 2px 0px black //x, y, difuminacion, color de sombra
			&:before
				display inline-block
				font-family "iconitos"
				content " \e600"
				margin 0 0.2em 0 0

		.filtro
			color azul
			text-decoration none
			font-size 14px
			font-weight bold
			font-style italic

		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0

	.usuario
		position absolute
		top 10px
		right 10px
		
		.avatar
			margin 0 1em 0 0
			position relative //obligatorio para z-index	
			z-index 2
			img
				width 52px
				border-radius 50%
		.flechita
			background naranja
			color white
			display block
			padding 2px
			position absolute
			right 0
			text-align right
			text-decoration none
			top 15px
			width 50%
			z-index 0

			&:after
				content "\e602"
				display block
				font-family "iconitos"
				margin 1px 0 0 1px
				text-shadow 1px 1px 0px black		

section
	.post
		background white
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black, 0.5)
		color gris_texto
		margin 0.5em
		position relative

		.textos
		position fixed
			.acciones
				border-top 3px solid azul
				padding 0.5em
				overflow hidden
				
				.datos
					float right
					
					.comentarios
						background gris_texto
						border-radius 3px
						color white
						margin 0 1em 0 0
						padding 2px 5px
						text-decoration none
						// :after position absolute alto de la linea
					
					.estrellita
						color pink
						&:before
							font-family "iconitos"
							font-size 1.5em
							content "\e602"

				.votos
					float left
					
					.down
					.up
						text-decoration none

					.down
						color red
						&:before
							font-family "iconitos"
							font-size 1.5em
							content "\e603"
						
					.up
						color green
						&:before
							font-family "iconitos"
							font-size 1.5em
							content "\e604"
		
			.descripcion
				color gris_texto
				position relative
				
				.detalles
					height 160px
					margin-left 175px
					margin-bottom 53px
					
					.autor
						margin 0.5em 0 2em 0
					
					.fecha
						float right
						margin 0 1em 0 0

					.tag
						background azul
						border-radius 0.5em
						color white
						padding 0.2em 0.5em
						text-decoration none
						
					.titulo
						color gris_oscuro
						font-size 18px
						font-style italic
						padding 0.5em 0.5em 0 0
						margin 0
							
		.imagen
			float left
			position inline-block
			margin 0
				
			img
				heigh 120px
				vertical-align top
				width 160px

@media screen and (min-width: 768px)

	header
		.titular
			.publicar
				font-size 1.1em
				padding-left 3em
				position relative

				&:before
					left 0
					font-size 2.5em
					position absolute
					top -10px

	.posts
		.post
			display inline-block
			width 48%
			vertical-align top
			&:nth-child(odd)
				margin-right 2%